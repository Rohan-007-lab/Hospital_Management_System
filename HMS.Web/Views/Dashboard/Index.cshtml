@model HMS.Web.Models.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<!-- Page Header -->
<div class="page-header">
    <h2><i class="fas fa-th-large"></i> Dashboard</h2>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item active">Dashboard</li>
        </ol>
    </nav>
</div>

<!-- Statistics Cards -->
<div class="row mb-4">
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="stat-card blue">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <div class="stat-icon blue">
                        <i class="fas fa-users"></i>
                    </div>
                    <h3>@Model.TotalPatients</h3>
                    <p>Total Patients</p>
                    <span class="trend up">
                        <i class="fas fa-arrow-up"></i> @Model.ActivePatients Active
                    </span>
                </div>
                <div class="text-end">
                    <a href="@Url.Action("Index", "Patients")" class="btn btn-sm btn-outline-primary">
                        <i class="fas fa-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="stat-card green">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <div class="stat-icon green">
                        <i class="fas fa-user-md"></i>
                    </div>
                    <h3>@Model.TotalDoctors</h3>
                    <p>Total Doctors</p>
                    <span class="trend up">
                        <i class="fas fa-check-circle"></i> All Active
                    </span>
                </div>
                <div class="text-end">
                    <a href="@Url.Action("Index", "Doctors")" class="btn btn-sm btn-outline-success">
                        <i class="fas fa-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="stat-card orange">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <div class="stat-icon orange">
                        <i class="fas fa-calendar-check"></i>
                    </div>
                    <h3>@Model.TodayAppointments</h3>
                    <p>Today's Appointments</p>
                    <span class="trend up">
                        <i class="fas fa-clock"></i> @Model.PendingAppointments Pending
                    </span>
                </div>
                <div class="text-end">
                    <a href="@Url.Action("Index", "Appointments")" class="btn btn-sm btn-outline-warning">
                        <i class="fas fa-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="stat-card red">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <div class="stat-icon red">
                        <i class="fas fa-rupee-sign"></i>
                    </div>
                    <h3>₹@Model.TodayRevenue.ToString("N0")</h3>
                    <p>Today's Revenue</p>
                    <span class="trend up">
                        <i class="fas fa-chart-line"></i> ₹@Model.MonthRevenue.ToString("N0") This Month
                    </span>
                </div>
                <div class="text-end">
                    <a href="@Url.Action("Index", "Bills")" class="btn btn-sm btn-outline-danger">
                        <i class="fas fa-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Second Row Stats -->
<div class="row mb-4">
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="stat-card purple">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <div class="stat-icon purple">
                        <i class="fas fa-bed"></i>
                    </div>
                    <h3>@Model.AvailableBeds/@Model.TotalBeds</h3>
                    <p>Available Beds</p>
                    <span class="trend @(Model.AvailableBeds > Model.TotalBeds/2 ? "up" : "down")">
                        <i class="fas @(Model.AvailableBeds > Model.TotalBeds/2 ? "fa-check" : "fa-exclamation")"></i> 
                        @Model.OccupiedBeds Occupied
                    </span>
                </div>
                <div class="text-end">
                    <a href="@Url.Action("Index", "Wards")" class="btn btn-sm btn-outline-primary">
                        <i class="fas fa-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="stat-card cyan">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <div class="stat-icon cyan">
                        <i class="fas fa-flask"></i>
                    </div>
                    <h3>@Model.PendingLabTests</h3>
                    <p>Pending Lab Tests</p>
                    <span class="trend @(Model.PendingLabTests > 10 ? "down" : "up")">
                        <i class="fas fa-vial"></i> Processing
                    </span>
                </div>
                <div class="text-end">
                    <a href="@Url.Action("Index", "LabTests")" class="btn btn-sm btn-outline-info">
                        <i class="fas fa-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="stat-card orange">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <div class="stat-icon orange">
                        <i class="fas fa-pills"></i>
                    </div>
                    <h3>@Model.LowStockMedicines</h3>
                    <p>Low Stock Medicines</p>
                    <span class="trend @(Model.LowStockMedicines > 5 ? "down" : "up")">
                        <i class="fas fa-exclamation-triangle"></i> Need Reorder
                    </span>
                </div>
                <div class="text-end">
                    <a href="@Url.Action("Index", "Medicines")" class="btn btn-sm btn-outline-warning">
                        <i class="fas fa-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="stat-card red">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <div class="stat-icon red">
                        <i class="fas fa-file-invoice-dollar"></i>
                    </div>
                    <h3>@Model.PendingBills</h3>
                    <p>Pending Bills</p>
                    <span class="trend @(Model.PendingBills > 10 ? "down" : "up")">
                        <i class="fas fa-money-bill-wave"></i> Collect Payment
                    </span>
                </div>
                <div class="text-end">
                    <a href="@Url.Action("Index", "Bills")" class="btn btn-sm btn-outline-danger">
                        <i class="fas fa-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Charts Row -->
<div class="row mb-4">
    <!-- Recent Appointments -->
    <div class="col-lg-8 mb-4">
        <div class="stat-card">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h5 class="mb-0"><i class="fas fa-calendar-alt"></i> Recent Appointments</h5>
                <a href="@Url.Action("Index", "Appointments")" class="btn btn-sm btn-primary">View All</a>
            </div>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Patient</th>
                            <th>Doctor</th>
                            <th>Date</th>
                            <th>Time</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td><i class="fas fa-user-circle text-primary"></i> John Doe</td>
                            <td>Dr. Smith</td>
                            <td>@DateTime.Now.ToString("dd MMM yyyy")</td>
                            <td>10:00 AM</td>
                            <td><span class="badge bg-warning">Pending</span></td>
                            <td>
                                <button class="btn btn-sm btn-outline-primary"><i class="fas fa-eye"></i></button>
                            </td>
                        </tr>
                        <tr>
                            <td><i class="fas fa-user-circle text-success"></i> Jane Smith</td>
                            <td>Dr. Johnson</td>
                            <td>@DateTime.Now.ToString("dd MMM yyyy")</td>
                            <td>11:30 AM</td>
                            <td><span class="badge bg-success">Confirmed</span></td>
                            <td>
                                <button class="btn btn-sm btn-outline-primary"><i class="fas fa-eye"></i></button>
                            </td>
                        </tr>
                        <tr>
                            <td><i class="fas fa-user-circle text-info"></i> Bob Wilson</td>
                            <td>Dr. Davis</td>
                            <td>@DateTime.Now.ToString("dd MMM yyyy")</td>
                            <td>02:00 PM</td>
                            <td><span class="badge bg-info">Scheduled</span></td>
                            <td>
                                <button class="btn btn-sm btn-outline-primary"><i class="fas fa-eye"></i></button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="col-lg-4 mb-4">
        <div class="stat-card">
            <h5 class="mb-3"><i class="fas fa-bolt"></i> Quick Actions</h5>
            <div class="d-grid gap-2">
                <a href="@Url.Action("Create", "Patients")" class="btn btn-outline-primary">
                    <i class="fas fa-user-plus"></i> Add New Patient
                </a>
                <a href="@Url.Action("Create", "Appointments")" class="btn btn-outline-success">
                    <i class="fas fa-calendar-plus"></i> Book Appointment
                </a>
                <a href="@Url.Action("Create", "Prescriptions")" class="btn btn-outline-info">
                    <i class="fas fa-prescription"></i> Create Prescription
                </a>
                <a href="@Url.Action("Create", "Bills")" class="btn btn-outline-warning">
                    <i class="fas fa-file-invoice"></i> Generate Bill
                </a>
                <a href="@Url.Action("Create", "LabTests")" class="btn btn-outline-danger">
                    <i class="fas fa-flask"></i> Request Lab Test
                </a>
            </div>
        </div>

        <!-- System Status -->
        <div class="stat-card mt-3">
            <h5 class="mb-3"><i class="fas fa-info-circle"></i> System Status</h5>
            <div class="mb-2">
                <small class="text-muted">Server Status</small>
                <div class="d-flex justify-content-between">
                    <span class="text-success"><i class="fas fa-circle"></i> Online</span>
                    <span>99.9%</span>
                </div>
            </div>
            <div class="mb-2">
                <small class="text-muted">Database</small>
                <div class="d-flex justify-content-between">
                    <span class="text-success"><i class="fas fa-circle"></i> Connected</span>
                    <span>Active</span>
                </div>
            </div>
            <div class="mb-2">
                <small class="text-muted">API Status</small>
                <div class="d-flex justify-content-between">
                    <span class="text-success"><i class="fas fa-circle"></i> Running</span>
                    <span>Healthy</span>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Activity Timeline -->
<div class="row">
    <div class="col-12">
        <div class="stat-card">
            <h5 class="mb-4"><i class="fas fa-history"></i> Recent Activity</h5>
            <div class="timeline">
                <div class="timeline-item">
                    <div class="timeline-marker bg-primary"></div>
                    <div class="timeline-content">
                        <h6 class="mb-1">New Patient Registration</h6>
                        <p class="text-muted small mb-0">John Doe registered as a new patient</p>
                        <small class="text-muted">5 minutes ago</small>
                    </div>
                </div>
                <div class="timeline-item">
                    <div class="timeline-marker bg-success"></div>
                    <div class="timeline-content">
                        <h6 class="mb-1">Appointment Completed</h6>
                        <p class="text-muted small mb-0">Dr. Smith completed consultation with Jane Smith</p>
                        <small class="text-muted">15 minutes ago</small>
                    </div>
                </div>
                <div class="timeline-item">
                    <div class="timeline-marker bg-warning"></div>
                    <div class="timeline-content">
                        <h6 class="mb-1">Bill Generated</h6>
                        <p class="text-muted small mb-0">Bill #BILL20250101 generated for patient #PAT001</p>
                        <small class="text-muted">30 minutes ago</small>
                    </div>
                </div>
                <div class="timeline-item">
                    <div class="timeline-marker bg-info"></div>
                    <div class="timeline-content">
                        <h6 class="mb-1">Lab Test Completed</h6>
                        <p class="text-muted small mb-0">Blood test results ready for Bob Wilson</p>
                        <small class="text-muted">1 hour ago</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .timeline {
        position: relative;
        padding-left: 40px;
    }

    .timeline::before {
        content: '';
        position: absolute;
        left: 15px;
        top: 0;
        bottom: 0;
        width: 2px;
        background: #e0e0e0;
    }

    .timeline-item {
        position: relative;
        margin-bottom: 30px;
    }

    .timeline-marker {
        position: absolute;
        left: -29px;
        top: 0;
        width: 12px;
        height: 12px;
        border-radius: 50%;
        border: 3px solid white;
        box-shadow: 0 0 0 2px #e0e0e0;
    }

    .timeline-content {
        background: #f8f9fa;
        padding: 15px;
        border-radius: 10px;
    }

    .timeline-content h6 {
        font-size: 14px;
        font-weight: 600;
    }

    .table td, .table th {
        vertical-align: middle;
    }

    .badge {
        padding: 5px 10px;
        border-radius: 5px;
        font-size: 11px;
        font-weight: 600;
    }
</style>