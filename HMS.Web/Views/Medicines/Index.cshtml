@model List<HMS.Web.Models.MedicineViewModel>
@{
    ViewData["Title"] = "Medicines";
}

<!-- Page Header -->
<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h2><i class="fas fa-pills"></i> Medicines Inventory</h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")">Dashboard</a></li>
                    <li class="breadcrumb-item active">Medicines</li>
                </ol>
            </nav>
        </div>
        <div>
            <a href="@Url.Action("Create", "Medicines")" class="btn btn-primary">
                <i class="fas fa-plus"></i> Add Medicine
            </a>
        </div>
    </div>
</div>

<!-- Statistics -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="stat-card">
            <h6 class="text-muted">Total Medicines</h6>
            <h3>@(Model?.Count ?? 0)</h3>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card">
            <h6 class="text-muted">Low Stock</h6>
            <h3 class="text-warning">@(Model?.Count(m => m.IsLowStock) ?? 0)</h3>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card">
            <h6 class="text-muted">Total Value</h6>
            <h3 class="text-success">₹@(Model?.Sum(m => m.StockQuantity * m.UnitPrice).ToString("N0") ?? "0")</h3>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card">
            <h6 class="text-muted">Categories</h6>
            <h3>@(Model?.Select(m => m.Category).Distinct().Count() ?? 0)</h3>
        </div>
    </div>
</div>

<!-- Medicines Table -->
<div class="stat-card">
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Medicine Name</th>
                    <th>Generic Name</th>
                    <th>Category</th>
                    <th>Manufacturer</th>
                    <th>Price</th>
                    <th>Stock</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    int index = 1;
                    foreach (var medicine in Model)
                    {
                        <tr class="@(medicine.IsLowStock ? "table-warning" : "")">
                            <td>@index</td>
                            <td><strong>@medicine.MedicineName</strong></td>
                            <td>@medicine.GenericName</td>
                            <td><span class="badge bg-info">@medicine.Category</span></td>
                            <td>@medicine.Manufacturer</td>
                            <td>₹@medicine.UnitPrice</td>
                            <td>
                                <span class="badge @(medicine.IsLowStock ? "bg-warning" : "bg-success")">
                                    @medicine.StockQuantity
                                </span>
                            </td>
                            <td>
                                @if (medicine.IsLowStock)
                                {
                                    <span class="badge bg-warning">
                                        <i class="fas fa-exclamation-triangle"></i> Low Stock
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-success">
                                        <i class="fas fa-check"></i> In Stock
                                    </span>
                                }
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <button class="btn btn-sm btn-outline-primary" title="View">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                    <button class="btn btn-sm btn-outline-warning" title="Update Stock">
                                        <i class="fas fa-box"></i>
                                    </button>
                                    <button class="btn btn-sm btn-outline-danger" onclick="deleteMedicine(@medicine.Id)" title="Delete">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                        index++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="9" class="text-center py-5">
                            <i class="fas fa-capsules fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No medicines found</h5>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        function deleteMedicine(id) {
            if (confirm('Are you sure you want to delete this medicine?')) {
                fetch('@Url.Action("Delete", "Medicines")/' + id, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                })
                .then(response => {
                    if (response.ok) {
                        location.reload();
                    }
                });
            }
        }
    </script>
}