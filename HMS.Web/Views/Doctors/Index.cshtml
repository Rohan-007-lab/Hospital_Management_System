@model List<HMS.Web.Models.DoctorViewModel>
@{
    ViewData["Title"] = "Doctors";
}

<!-- Page Header -->
<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h2><i class="fas fa-user-md"></i> Doctors Management</h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")">Dashboard</a></li>
                    <li class="breadcrumb-item active">Doctors</li>
                </ol>
            </nav>
        </div>
        <div>
            <a href="@Url.Action("Create", "Doctors")" class="btn btn-primary">
                <i class="fas fa-plus"></i> Add New Doctor
            </a>
        </div>
    </div>
</div>

<!-- Doctors Grid -->
<div class="row">
    @if (Model != null && Model.Any())
    {
        foreach (var doctor in Model)
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="doctor-card stat-card">
                    <div class="doctor-header">
                        <div class="doctor-avatar">
                            @{
                                var initials = $"{doctor.FirstName[0]}{doctor.LastName[0]}";
                            }
                            @initials
                        </div>
                        <div class="doctor-badge">
                            <span class="badge bg-success">@doctor.DoctorNumber</span>
                        </div>
                    </div>

                    <div class="doctor-body text-center">
                        <h5 class="mb-1">Dr. @doctor.FirstName @doctor.LastName</h5>
                        <p class="text-muted mb-2">
                            <i class="fas fa-stethoscope"></i> @doctor.Specialization
                        </p>
                        
                        <div class="doctor-info">
                            <div class="info-row">
                                <i class="fas fa-graduation-cap text-primary"></i>
                                <span>@doctor.Qualifications</span>
                            </div>
                            <div class="info-row">
                                <i class="fas fa-award text-warning"></i>
                                <span>@doctor.ExperienceYears years experience</span>
                            </div>
                            <div class="info-row">
                                <i class="fas fa-rupee-sign text-success"></i>
                                <span>₹@doctor.ConsultationFee consultation</span>
                            </div>
                            <div class="info-row">
                                <i class="fas fa-clock text-info"></i>
                                <span>@doctor.WorkingHoursStart.ToString(@"hh\:mm") - @doctor.WorkingHoursEnd.ToString(@"hh\:mm")</span>
                            </div>
                        </div>

                        <hr>

                        <div class="doctor-contact">
                            <p class="mb-1 small">
                                <i class="fas fa-envelope text-primary"></i> @doctor.Email
                            </p>
                            <p class="mb-0 small">
                                <i class="fas fa-phone text-success"></i> @doctor.PhoneNumber
                            </p>
                        </div>
                    </div>

                    <div class="doctor-footer">
                        <a href="@Url.Action("Details", "Doctors", new { id = doctor.Id })" class="btn btn-sm btn-outline-primary">
                            <i class="fas fa-eye"></i> View
                        </a>
                        <a href="#" class="btn btn-sm btn-outline-success">
                            <i class="fas fa-calendar"></i> Schedule
                        </a>
                        <button class="btn btn-sm btn-outline-danger" onclick="deleteDoctor(@doctor.Id)">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <div class="stat-card text-center py-5">
                <i class="fas fa-user-md fa-5x text-muted mb-3"></i>
                <h4 class="text-muted">No doctors found</h4>
                <p class="text-muted">Start by adding your first doctor</p>
                <a href="@Url.Action("Create", "Doctors")" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Add Doctor
                </a>
            </div>
        </div>
    }
</div>

<style>
    .doctor-card {
        transition: all 0.3s;
        overflow: hidden;
    }

    .doctor-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 10px 30px rgba(0,0,0,0.15);
    }

    .doctor-header {
        position: relative;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 30px 20px;
        margin: -25px -25px 20px -25px;
    }

    .doctor-avatar {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        background: white;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto;
        font-size: 32px;
        font-weight: 700;
        color: #667eea;
        border: 4px solid white;
        box-shadow: 0 5px 15px rgba(0,0,0,0.2);
    }

    .doctor-badge {
        position: absolute;
        top: 15px;
        right: 15px;
    }

    .doctor-info {
        margin: 20px 0;
        text-align: left;
    }

    .info-row {
        display: flex;
        align-items: center;
        gap: 10px;
        padding: 8px 15px;
        background: #f8f9fa;
        border-radius: 8px;
        margin-bottom: 8px;
        font-size: 13px;
    }

    .info-row i {
        width: 20px;
    }

    .doctor-contact {
        background: #f8f9fa;
        padding: 15px;
        border-radius: 10px;
        margin-top: 15px;
    }

    .doctor-footer {
        display: flex;
        justify-content: space-between;
        gap: 8px;
        margin-top: 15px;
    }

    .doctor-footer .btn {
        flex: 1;
    }
</style>

@section Scripts {
    <script>
        function deleteDoctor(id) {
            if (confirm('Are you sure you want to delete this doctor?')) {
                fetch('@Url.Action("Delete", "Doctors")/' + id, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                })
                .then(response => {
                    if (response.ok) {
                        location.reload();
                    }
                });
            }
        }
    </script>
}