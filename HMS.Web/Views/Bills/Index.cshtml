@model List<HMS.Web.Models.BillViewModel>
@{
    ViewData["Title"] = "Bills & Invoices";
}

<!-- Page Header -->
<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h2><i class="fas fa-file-invoice-dollar"></i> Bills & Invoices</h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")">Dashboard</a></li>
                    <li class="breadcrumb-item active">Bills</li>
                </ol>
            </nav>
        </div>
        <div>
            <a href="@Url.Action("Create", "Bills")" class="btn btn-primary">
                <i class="fas fa-plus"></i> Create Bill
            </a>
        </div>
    </div>
</div>

<!-- Revenue Stats -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="stat-card">
            <h6 class="text-muted">Total Bills</h6>
            <h3>@(Model?.Count ?? 0)</h3>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card">
            <h6 class="text-muted">Total Revenue</h6>
            <h3 class="text-success">₹@(Model?.Sum(b => b.TotalAmount).ToString("N0") ?? "0")</h3>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card">
            <h6 class="text-muted">Pending Amount</h6>
            <h3 class="text-warning">₹@(Model?.Sum(b => b.BalanceAmount).ToString("N0") ?? "0")</h3>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card">
            <h6 class="text-muted">Paid Amount</h6>
            <h3 class="text-info">₹@(Model?.Sum(b => b.PaidAmount).ToString("N0") ?? "0")</h3>
        </div>
    </div>
</div>

<!-- Bills Table -->
<div class="stat-card">
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Bill Number</th>
                    <th>Patient</th>
                    <th>Date</th>
                    <th>Amount</th>
                    <th>Paid</th>
                    <th>Balance</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    int index = 1;
                    foreach (var bill in Model)
                    {
                        <tr>
                            <td>@index</td>
                            <td><span class="badge bg-primary">@bill.BillNumber</span></td>
                            <td>
                                <i class="fas fa-user-injured text-primary"></i>
                                @bill.PatientName
                            </td>
                            <td>@bill.BillDate.ToString("dd MMM yyyy")</td>
                            <td><strong>₹@bill.TotalAmount.ToString("N2")</strong></td>
                            <td class="text-success">₹@bill.PaidAmount.ToString("N2")</td>
                            <td class="text-danger">₹@bill.BalanceAmount.ToString("N2")</td>
                            <td>
                                @switch (bill.PaymentStatus)
                                {
                                    case "Paid":
                                        <span class="badge bg-success">
                                            <i class="fas fa-check-circle"></i> Paid
                                        </span>
                                        break;
                                    case "Pending":
                                        <span class="badge bg-warning">
                                            <i class="fas fa-clock"></i> Pending
                                        </span>
                                        break;
                                    case "PartiallyPaid":
                                        <span class="badge bg-info">
                                            <i class="fas fa-hourglass-half"></i> Partial
                                        </span>
                                        break;
                                    default:
                                        <span class="badge bg-secondary">@bill.PaymentStatus</span>
                                        break;
                                }
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="@Url.Action("Print", "Bills", new { id = bill.Id })" class="btn btn-sm btn-outline-primary" title="View/Print" target="_blank">
                                        <i class="fas fa-print"></i>
                                    </a>
                                    @if (bill.BalanceAmount > 0)
                                    {
                                        <button class="btn btn-sm btn-outline-success" title="Process Payment">
                                            <i class="fas fa-dollar-sign"></i>
                                        </button>
                                    }
                                    <button class="btn btn-sm btn-outline-info" title="Download PDF">
                                        <i class="fas fa-download"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                        index++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="9" class="text-center py-5">
                            <i class="fas fa-file-invoice fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No bills found</h5>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>